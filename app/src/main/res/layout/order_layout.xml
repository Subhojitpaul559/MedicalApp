<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_relativeLayout"
    android:orientation="vertical"
    android:layout_margin="0.5dp"
    android:background="@color/white_grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                tools:ignore="Orientation"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2">


                        <TextView

                            android:id="@+id/item_name"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/item_name"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/changeodr"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Waiting"
                            android:textSize="8dp"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_margin="5dp"
                            android:id="@+id/cancelodr"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:textSize="8dp"
                            android:text="Waiting"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:id="@+id/user_name"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:text="Username"
                            android:textColor="@color/black"
                            android:textSize="18sp"

                            />
                        <TextView
                            android:id="@+id/odrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                    <TextView

                        android:id="@+id/address"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/item_name"
                        android:text="Address"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="₹300"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/item_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="₹500"
                            android:foreground="@drawable/text_strike"/>

                        <TextView
                            android:id="@+id/item_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="5%"
                            android:textColor="@color/green_700"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_below="@+id/price"
                        android:layout_marginLeft="14dp">

                        <TextView
                            android:id="@+id/item_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qty:1"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="phone: 1234567890"
                            android:layout_weight="1" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>