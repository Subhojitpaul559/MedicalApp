<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout_nav"
    tools:context=".Navigation_activity">

    <LinearLayout
        android:id="@+id/nill"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:background="@drawable/custombackground_nav">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_marginTop="150dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Simpheal"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Buisness Application"
            android:textColor="@color/white"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_med"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/parent_layout_nav"
        android:layout_marginVertical="100dp"
        tools:ignore="MissingConstraints" >


        <androidx.cardview.widget.CardView
            android:id="@+id/medicine"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/deep_yellow"
            app:cardCornerRadius="5dp"
            android:elevation="2dp"
            app:cardPreventCornerOverlap="true"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Medicine store"
                android:textColor="@color/grey"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/parent_layout_nav"
        android:layout_marginVertical="50dp"
        tools:ignore="MissingConstraints" >


        <androidx.cardview.widget.CardView
            android:id="@+id/doctor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/white_grey"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Doctor"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>